<Alloy>
	<Window id="window" class="container">
        <View class="first-section">
            <Button class="first-section-btn first-layer menu-left" title="init Session" id="initSessionButton"/>
            <Button class="first-section-btn first-layer menu-right" title="logout Session" id="logoutSessionButton"/>
            <Button class="first-section-btn second-layer menu-left" title="get Session" id="getSessionButton"/>
            <Button class="first-section-btn second-layer menu-right" title="get Install" id="getInstallSessionButton"/>
        </View>
        <View class="second-section">
            <Button class="second-section-btn first-layer" title="set Indentity" id="setIndentityButton"/>
            <Button class="second-section-btn second-layer" title="custom Action" id="customActionButton"/>
            <TextField class="second-section-textfield first-layer menu-left" id="identityTextField"/>
            <TextField class="second-section-textfield second-layer menu-left" id="customActionTextField"/>
        </View>
    </Window>
</Alloy>
